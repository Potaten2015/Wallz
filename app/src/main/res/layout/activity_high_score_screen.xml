        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/twitch_string"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/twitch_description_text"
        android:id="@+id/twitch_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/twitch_description_string"
